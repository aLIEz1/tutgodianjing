.wrapper {
    background-color: #fff;

}

.wrapper .share {
    margin: 0 30rpx;
    padding-top: 25rpx;

}

.acea-row.row-between {
    justify-content: space-between;

}

.acea-row.row-bottom {
    align-items: flex-end;

}

.wrapper .share .money {
    font-size: 28rpx;
    font-weight: bold;

}

.font-color {
    color: #fc4141 !important;

}

.wrapper .share .money .num {
    font-size: 48rpx;

}

.wrapper .introduce {
    font-size: 32rpx;
    font-weight: bold;
    margin: 23rpx 30rpx 0 30rpx;

}

.wrapper .label {
    margin: 0 30rpx;
    font-size: 24rpx;
    color: #82848f;
    margin-top: 22rpx;
}

.acea-row {
    display: flex;
    flex-wrap: wrap;
}

.acea-row.row-between-wrapper {
    align-items: center;
    justify-content: space-between;

}

.wrapper .coupon {
    padding: 0 30rpx;
    border-top: 1rpx solid #f5f5f5;
    margin-top: 25rpx;
    height: 80rpx;
    font-size: 26rpx;
    color: #82848f;
}

.wrapper .coupon .hide {
    width: 540rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.line1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

}


.home {
    position: fixed;
    top: 780rpx;
    color: white;
    text-align: center;
    z-index: 99;
    right: 10rpx;
}

.home .homeCon {
    width: 86rpx;
    border-radius: 50rpx;
    padding: 34rpx 0;
    box-sizing: border-box;
    transition: all 0.3s ease-in-out 0s;
    opacity: 0;
    transform: scale(0);
    height: 0rpx;
    color: #e93323;
}

.home .homeCon.on {
    opacity: 1;
    transform: scale(1);
    height: 300rpx;
    color: #fff;
}

.home .homeCon .iconfont {
    font-size: 48rpx;
}

.home .pictrue {
    width: 86rpx;
    height: 86rpx;
    border-radius: 50%;
    margin-top: 20rpx;
}

.home .pictrue image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.acea-row {
    display: flex;
    flex-wrap: wrap;
}

.bg-color {
    background-color: #e93323 !important;
}

.acea-row.row-column-between {
    flex-direction: column;
    justify-content: space-between;
}


